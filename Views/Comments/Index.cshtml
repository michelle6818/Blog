@model IEnumerable<Blog.Models.Comment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Moderated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModeratedReason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModeratedBody)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryPost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @*@Html.DisplayFor(modelItem => item.Body)*@
                @Html.Raw(item.Body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Updated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Moderated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModeratedReason)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.ModeratedBody)*@
                @Html.Raw(item.ModeratedBody)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryPost.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlogUser.FullName)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                @if (User.IsInRole("Administrator"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    
                }
                @if (User.IsInRole("Moderator"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    
                }
            </td>
        </tr>
}
    </tbody>
</table>
