    @if (User.Identity.IsAuthenticated)
    {
        <form asp-controller="Comments" asp-action="Create">
            <input type="hidden" asp-for="Slug" />
            <div class="container">
                <div class="row">
                    <div class="col-md">
                        @Html.Hidden("CategoryPostId", Model.Id)

                        <div class="form-group">
                            <label class="control-label">Comment</label>
                            @*<input asp-for="Body" class="form-control" />*@
                            <textarea required name="Body" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-dark">
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
    else
    {
        <h1>Please log in to add a comment</h1>
    }
    @foreach (var comment in Model.Comments.OrderByDescending(c => c.Created))
    {
        <div class="row">
            <div class="col">
                @comment.BlogUser.FullName
            </div>
            <div class="col">
                @comment.Created.ToString("MMM dd, yyyy")
            </div>
        </div>
        <div class="row">
            <div class="col">
                @Html.Raw(comment.Body)
            </div>
        </div>
    }
    <br />
    <div>
        @if (User.IsInRole("Administrator"))
        {
            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        }
       
        @if (User.IsInRole("Administrator"))
        {
            <a asp-controller="Comments" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        }|
        @if (User.IsInRole("Moderator"))
        {
            <a asp-controller="Comments" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        }
        <a asp-controller="Comments" asp-action="Index">Back to Comments</a>
        <a asp-action="Index">Back to Posts</a>
    </div>
